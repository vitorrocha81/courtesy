<div class="container">
	<div class="row">
		<div class="col-sm-8 col-md-8 col-lg-8 col-md-offset-2 col-lg-offset-2 col-sm-offser-2">
		<p class="text text-info"><%= @total_users %> usuários cadastrados, aproveite e <%= link_to 'Cadastre-se', new_user_path %>  para concorrer também!! </p>
	</div>
	<div class="row">
		<div class="col-sm-8 col-md-8 col-lg-8 col-md-offset-2 col-lg-offset-2 col-sm-offser-2">
		<%= link_to 'Cadastre-se', new_user_path, class: "btn btn-primary" %>
		</div>
	</div>	
</div>
          <div class="row">
              <div class="col-sm-10 col-md-10 col-lg-10 col-md-offset-1 col-lg-offset-1 col-sm-offser-1">
                  <h1 class="page-header"></h1>
                  <div class="panel panel-primary">
                      <div class="panel-heading">Últimos cadastros</div>
                      <div class="panel-body">
                          <table class="table table-bordered table-condensed" id="dataTable">
                              <thead>
                                  <tr>
                                      <th>Nome</th>
                                      <th>Email</th>
                                      <th>Indicações</th>
                                      <th>Empresa</th>
                                      <th>Detalhes</th>
                                      <!-- <th style="width: 10%">Excluir</th> -->
                                  </tr>
                              </thead>
                              <tbody>
                                   <% @users.order("created_at desc").each do |user| %>
                                  <tr>
                                      <td><%= link_to user.name, user_path(user) %></td>
                                      <td><%= user.email%></td>
                                      <td><%= user.friends.count %></td>
                                      <td><%= user.company %></td>
                                      <td>
                                         <%= link_to '', user_path(user), class: 'fa fa-info-circle pull-right' %>
                                      </td>
                                       <td>
                                      </td>
                                  </tr>
                                  <% end %>
                              </tbody>
                          </table>
                      </div>
                  </div>
              </div>
          </div>
      </div>