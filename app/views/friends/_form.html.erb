<div class="container">
	<%= simple_form_for [@user, @friend] do |f| %>
	<% f.association :user %>
	<%= f.input :name, label: "Nome", placeholder: 'Nome' %>
	<%= f.input :email, label: "E-mail", placeholder: 'E-mail' %>
	
	<div class="actions">
		<%= f.button :submit, 'Indicar', class: "btn btn-default" %>
	</div>
	<% end %>
</div>

